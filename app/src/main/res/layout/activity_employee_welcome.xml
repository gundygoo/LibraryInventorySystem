<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamteam.softwareengineering.libraryinventorysystem.EmployeeWelcome">

    <Button
        android:text="Customer Accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/users"
        android:layout_below="@+id/inventoryWelcome"
        android:layout_alignStart="@+id/inventoryWelcome"
        android:layout_alignEnd="@+id/inventoryWelcome"
        android:textAllCaps="false" />

    <Button
        android:text="Inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/inventoryWelcome"
        android:layout_below="@+id/checkInButtonWelcome"
        android:layout_alignStart="@+id/checkInButtonWelcome"
        android:layout_alignEnd="@+id/checkInButtonWelcome"
        android:textAllCaps="false" />

    <TextView
        android:text="Welcome to Dream Team Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeText"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Check Out Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/checkOutBookWelcome"
        android:layout_below="@+id/WelcomeText"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

    <Button
        android:text="Check In Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/checkInButtonWelcome"
        android:layout_below="@+id/checkOutBookWelcome"
        android:layout_alignEnd="@+id/checkOutBookWelcome"
        android:layout_alignStart="@+id/checkOutBookWelcome"
        android:textAllCaps="false" />
</RelativeLayout>
