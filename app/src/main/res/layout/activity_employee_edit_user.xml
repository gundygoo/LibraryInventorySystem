<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employee_edit_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dreamteam.softwareengineering.libraryinventorysystem.EmployeeEditUser">

    <TextView
        android:text="User Accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ResetPasswordText"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Edit User Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAccountsTextEdit"
        android:textSize="36sp"
        android:layout_below="@+id/ResetPasswordText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/userAccountsTextEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/customerNameEdit"
        android:hint="Customer Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/customerNameEdit"
        android:layout_alignStart="@+id/customerNameEdit"
        android:id="@+id/customerID"
        android:hint="customer ID #" />

    <Button
        android:text="Update User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newAge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/editUpdateButton"
        android:textAllCaps="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newPassword"
        android:layout_below="@+id/customerID"
        android:layout_alignStart="@+id/newUsername"
        android:layout_marginTop="10dp"
        android:hint="New Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newAge"
        android:hint="New Age"
        android:layout_below="@+id/newAddress"
        android:layout_alignStart="@+id/newAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newAddress"
        android:hint="New Address"
        android:layout_below="@+id/newEmailAddress"
        android:layout_alignStart="@+id/newEmailAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newEmailAddress"
        android:hint="New Email Address"
        android:layout_below="@+id/newUsername"
        android:layout_alignStart="@+id/ResetPasswordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newUsername"
        android:hint="New Username"
        android:layout_below="@+id/newPassword"
        android:layout_alignStart="@+id/newEmailAddress" />

</RelativeLayout>
